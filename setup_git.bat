# Git repository setup for sharing Donkey Kong Mobile project

# 1. Initialize git repository
git init

# 2. Create .gitignore file for Unity projects
echo "Creating .gitignore for Unity..."

# 3. Add all files
git add .

# 4. Make initial commit
git commit -m "Initial commit - Donkey Kong Mobile Unity project"

# 5. Add remote repository (replace with your GitHub repo URL)
# git remote add origin https://github.com/yourusername/donkey-kong-mobile.git

# 6. Push to GitHub
# git push -u origin main

echo "Project ready for GitHub upload!"
